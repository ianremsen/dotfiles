# The file that stores cygwin-specific settings.
# -*- mode: shell;-*-

SSHAGENT=/usr/bin/ssh-agent        
SSHAGENTARGS="-s"      

if [ -z "$SSH_AUTH_SOCK" -a -x "$SSHAGENT" ]; then     
    eval `$SSHAGENT $SSHAGENTARGS` >> /dev/null        
    trap "kill $SSH_AGENT_PID" 0       
fi

source ~/.aliases

alias setup='setup -K http://cygwinports.org/ports.gpg'

unalias gop
unalias visudo
unalias crontab
unalias pkg-ar
unalias pkg-du
unalias pkg-in
unalias pkg-rm
unalias pkg-se
unalias pkg-u
unalias pkg-ug
unalias pkg-up

if [ -d "$HOME/code/NES" ]; then
    export NES=$HOME/code/NES
    export NESC=$NES/bin
    export NESP=$NES/Projects
    export PATH=$PATH:$NESC
    alias cl='cl65 -L $NES/lib -t nes -I $NES/include'
fi

if [ -d "/cygdrive/c/Go" ]; then
    export PATH=$PATH:/cygdrive/c/Go/bin
    export GOPATH=$HOME/code/go
fi

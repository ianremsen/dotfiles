# The file that stores Cygwin-specific settings.
# -*- mode: shell;-*-

SSHAGENT="/usr/bin/ssh-agent"
SSHAGENTARGS="-s"

if [ -z "$SSH_AUTH_SOCK" -a -x "$SSHAGENT" ]; then
    eval `$SSHAGENT $SSHAGENTARGS` > /dev/null
    trap "kill $SSH_AGENT_PID" 0
fi

source "$HOME/.aliases"

alias setup="setup-x86_64 -K http://cygwinports.org/ports.gpg"

unalias gop
unalias visudo
unalias crontab
unalias pkg-ar
unalias pkg-du
unalias pkg-in
unalias pkg-rm
unalias pkg-se
unalias pkg-u
unalias pkg-ug
unalias pkg-up

alias cyg-in="setup -qgdnP"
alias cyg-rm="setup -qgdnx"

if [ -d "/cygdrive/c/Go" ]; then
    export PATH="$PATH:C:\Users\ian\code\go"
    export GOPATH="C:\Users\ian\code\go"
fi
